<h1>Flavors</h1>
@using TreatShop.Models;
@model List<TreatShop.Models.Flavor>
@if (Model.Count == 0)
{
  <h2>This flavor has no logged treats!</h2>
}
else 
{
  @foreach (Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new {id = flavor.FlavorId})</li>
  }
}
<p>@Html.ActionLink("Create a flavor!", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>