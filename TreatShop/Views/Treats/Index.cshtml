<h1>Treats</h1>
@using TreatShop.Models;
@model List<TreatShop.Models.Treat>
@if (Model.Count == 0)
{
  <h2>This treat has no logged flavors!</h2>
}
else 
{
  @foreach (Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.TreatName}", "Details", new {id = treat.TreatId})</li>
  }
}
<p>@Html.ActionLink("Create a treat!", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>